---
import { getCollection } from 'astro:content';
import { getEntryBySlug } from 'astro:content';
import MusicPost from '@/layouts/MusicPost.astro';

const allPosts = await getCollection('music');
const post = await getEntryBySlug('music', Astro.params.slug);

if (!post) {
  throw new Error(`Post not found for slug: ${Astro.params.slug}`);
}
---

<MusicPost post={post} />
